{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Turbo: Dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm dev",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "serverReadyAction": {
                "pattern": "Local:\\s+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        }
    ]
}